    title Joom
  body 
    header
      h1 Joom
    main 
      div#home
        div.home
          div.left
            div#welcome
              div#list
                h4 Open Rooms:
                ul
              div#info
                h3 Nickname: Annonymous
                div.room
                  form#roomName
                    label Room
                    input( type="text" , placeholder="room name", required)
                    button Enter Room
                div.nickname
                  form#name
                    label Nickname
                    input(type="text", placeholder="nickname", required)
                    button Save
          div.right
            img#img(src="https://www.payetteforward.com/wp-content/uploads/2019/05/what-is-video-calling.jpg")
      div#room
        h3
        ul
        form#msg
          input(type="text", placeholder="message", required)
          button Send

        div#myStream
          video#myFace(autoplay, playsinline, width="400", height="400")
          button#mute Mute
          button#camera Turn Camera Off
          select#cameras
          video#peersFace(autoplay, playsinline, width="400", height="400")
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/socket.js")




